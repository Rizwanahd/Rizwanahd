<div class='w-40 h-screen bg-blue-500'>
  <h1 class='text-green-300 text-xl font-bold text-center'> Projects</h1>
  <ul>
    <% @projects.each do |project| %>
      <% unless project.archived? %>
        <li class="m-1 flex justify-center item-center bg-blue-400 hover:bg-blue-700 text-white font-bold ">
          <%= link_to project.name, project, class: 'w-full py-2 px-4 text-center' %>
        </li>
      <% end %>
    <% end %>
  </ul>
  <% if policy(Project).new? %>
    <div class='w-full flex justify-center'><button class="btn-primary">
        <%= link_to "New Project", new_project_path %></button>
    </div>
  <% end %>
</div>
